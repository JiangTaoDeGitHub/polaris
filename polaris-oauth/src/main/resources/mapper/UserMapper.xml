<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.polaris.mapper.UserMapper" >

    <select id="selectByUserName" resultType="com.polaris.model.User">
        select * from sys_user where username = #{username}
    </select>

    <select id="getUserByMobile" resultType="com.polaris.model.User">
        select * from sys_user where mobile = #{mobile}
    </select>

</mapper>