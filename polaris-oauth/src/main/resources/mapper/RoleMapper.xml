<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.polaris.mapper.RoleMapper" >

    <select id="listRolesByUserId" resultType="com.polaris.model.SysRole">
        SELECT ro.* FROM sys_role ro LEFT join sys_user_role ur on ro.ID = ur.ROLEID WHERE ur.USERID = #{userid}
    </select>

</mapper>